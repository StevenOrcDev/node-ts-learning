{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true, // Activer l'émission de métadonnées pour les décorateurs
    "experimentalDecorators": true, // Activer les décorateurs expérimentaux
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Répertoire de sortie
    "moduleResolution": "node",
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "rootDir": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@services/*": ["./src/services/*"],
      "@routes/*": ["./src/routes/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}